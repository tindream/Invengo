    <!--#region 文本图标资源 -->
    <FontFamily x:Key="FontAwesome">/Paway.WPF;component/Resource/#fontawesome</FontFamily>
    <!--#endregion-->

    <!--#region 主题 -->
    <!--主题背景-->
    <SolidColorBrush x:Key="ThemeBackground" Color="{Binding Path=(local:ThemeEXT.Background).Value.Color, RelativeSource={RelativeSource Self}}"/>
    <!--主题背景深色-->
    <SolidColorBrush x:Key="ThemeBackgroundHigh" Color="{Binding Path=(local:ThemeEXT.HighBrush).Normal.Color, RelativeSource={RelativeSource Self}}"/>
    <!--主题-->
    <SolidColorBrush x:Key="ThemeColor" Color="{Binding Path=(local:ThemeEXT.ItemBrush).Pressed.Color, RelativeSource={RelativeSource Self}}"/>
    <SolidColorBrush x:Key="ThemeColorNormal" Color="{Binding Path=(local:ThemeEXT.ItemBrush).Normal.Color, RelativeSource={RelativeSource Self}}"/>
    <SolidColorBrush x:Key="ThemeColorMouse" Color="{Binding Path=(local:ThemeEXT.ItemBrush).Mouse.Color, RelativeSource={RelativeSource Self}}"/>
    <!--主题深色-->
    <SolidColorBrush x:Key="ThemeHigh" Color="{Binding Path=(local:ThemeEXT.HighBrush).Pressed.Color, RelativeSource={RelativeSource Self}}"/>
    <!--主题浅色-->
    <SolidColorBrush x:Key="ThemeLight" Color="{Binding Path=(local:ThemeEXT.HighBrush).Mouse.Color, RelativeSource={RelativeSource Self}}"/>
    <!--颜色选择器-->
    <LinearGradientBrush x:Key="ColorSelector">
        <GradientStop Color="#ff0000" />
        <GradientStop Color="#ff00ff" Offset="0.571" />
        <GradientStop Color="#0000ff" Offset="0.45" />
        <GradientStop Color="#00ffff" Offset="0.3426" />
        <GradientStop Color="#00ff00" Offset="0.2285" />
        <GradientStop Color="#ffff00" Offset="0.114" />
        <GradientStop Color="#ff0000" Offset="0.7994" />
        <GradientStop Color="White" Offset="0.7995" />
        <GradientStop Color="Black" Offset="1" />
    </LinearGradientBrush>
    <!--马赛克背景-->
    <DrawingBrush x:Key="MosaicBrush" RenderOptions.CachingHint="Cache" Viewport="0,0,16,16" ViewportUnits="Absolute" TileMode="Tile">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="#A0D3D3D3">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,0,8,8" />
                            <RectangleGeometry Rect="8,8,8,8" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>
    <!--虚线边框-->
    <DrawingBrush x:Key="DotLineBrush" RenderOptions.CachingHint="Cache" Viewport="0,0,4,4" ViewportUnits="Absolute" TileMode="Tile">
        <DrawingBrush.Drawing>
            <DrawingGroup>
                <GeometryDrawing Brush="LightGray">
                    <GeometryDrawing.Geometry>
                        <GeometryGroup>
                            <RectangleGeometry Rect="0,0,8,8" />
                            <RectangleGeometry Rect="8,8,8,8" />
                        </GeometryGroup>
                    </GeometryDrawing.Geometry>
                </GeometryDrawing>
            </DrawingGroup>
        </DrawingBrush.Drawing>
    </DrawingBrush>

    <!--#endregion-->

    <!--#region 配色 -->
    <SolidColorBrush x:Key="Color" Color="#409EFF" />
    <SolidColorBrush x:Key="High" Color="#003F80" />

    <SolidColorBrush x:Key="Success" Color="#2DB84D" />
    <SolidColorBrush x:Key="Warn" Color="#FF9900" />
    <SolidColorBrush x:Key="Error" Color="#F8331E" />

    <Color x:Key="MainColor">#409EFF</Color>
    <Color x:Key="SuccessColor">#2DB84D</Color>
    <Color x:Key="WarnColor">#FF9900</Color>
    <Color x:Key="ErrorColor">#F8331E</Color>

