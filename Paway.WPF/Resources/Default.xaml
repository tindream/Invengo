    <SolidColorBrush x:Key="Text" Color="#222" />
    <!--68-->
    <SolidColorBrush x:Key="TextSub" Color="#444" />
    <!--119-->
    <SolidColorBrush x:Key="TextLight" Color="#777" />

    <!--220-->
    <SolidColorBrush x:Key="Border" Color="#DCDFE6" />
    <!--228-->
    <SolidColorBrush x:Key="BorderSub" Color="#E4E7ED" />
    <!--235-->
    <SolidColorBrush x:Key="BorderLight" Color="#EBEEF5" />
    <!--242-->
    <SolidColorBrush x:Key="Light" Color="#F2F6FC" />

    <!--211-->
    <SolidColorBrush x:Key="Gray1" Color="LightGray" />
    <!--169-->
    <SolidColorBrush x:Key="Gray2" Color="DarkGray" />
    <!--128-->
    <SolidColorBrush x:Key="Gray3" Color="Gray" />
    <!--105-->
