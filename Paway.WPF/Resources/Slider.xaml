        <Grid
            UseLayoutRounding="True"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">
            <Path Name="grip"
                  Data="M12,11C12,11 18,5.5 18,5.5 18,5.5 12,0 12,0 12,0 0,0 0,0 0,0 0,11 0,11 0,11 12,11 12,11z"
                  Stretch="Fill"
                  Fill="#FFF0F0F0"
                  Stroke="#FFACACAC"
                  StrokeThickness="1"
