<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Paway.WPF">

    <Style TargetType="{x:Type local:ProgressBarEXT}">
        <Setter Property="local:ThemeMonitor.IsMonitoring" Value="True"/>
        <Setter Property="local:ProgressBarEXT.IsMonitoring" Value="True"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Template">
            <Setter.Value>
                <!--控件模板-->
                <ControlTemplate TargetType="{x:Type local:ProgressBarEXT}" >
                    <Grid>
                        <Border Name="PART_Track"
                                BorderBrush="LightGray"
                                CornerRadius="{TemplateBinding Radius}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                Background="{TemplateBinding Background}" />
                        <Border x:Name="PART_Indicator"
                                CornerRadius="{TemplateBinding Radius}"
                                HorizontalAlignment="Left">
                            <Border.Background>
                                <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                                    <GradientStop 
                                        Offset="0"
                                        Color="{Binding ForegroundStartColor, RelativeSource={RelativeSource TemplatedParent}}" />
                                    <GradientStop 
                                        Offset="1"
                                        Color="{Binding ForegroundEndColor, RelativeSource={RelativeSource TemplatedParent}}" />
                                </LinearGradientBrush>
                            </Border.Background>
                        </Border>
                        <Grid>
                            <Label Opacity="0.7" Name="txt"
                                   Padding="12,4,5,4"
                                   Foreground="#000000"
                                   Content="{TemplateBinding ProgressValue}"
                                   FontFamily="Microsoft YaHei"
                                   HorizontalAlignment="Right"
                                   VerticalContentAlignment="Center"/>
                        </Grid>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="Value" Value="100">
                            <Setter TargetName="txt" Property="Foreground" Value="White" />
                            <Setter TargetName="txt" Property="Opacity" Value="1.0" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>