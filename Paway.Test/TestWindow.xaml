<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Border Name="borderClip" BorderBrush="Gray" BorderThickness="1" Background="Green" Width="100" Height="100">
                <Border.Clip>
                    <RectangleGeometry  Rect="0,10,100,2"/>
                </Border.Clip>
            </Border>
            <TextBoxEXT Height="70" AcceptsReturn="True" TextWrapping="Wrap" Text="{Binding Text}"/>
            <ButtonEXT Command="{Binding ButtonCommand}" CommandParameter="{Binding ElementName=listView}" Click="ButtonEXT_Click"/>
        </StackPanel>
        <Border Grid.Column="1" BorderBrush="LightGray" BorderThickness="1"
                Width="350" Height="300">
            <ListViewCustom ItemsSource="{Binding ViewList}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </Border>
    </Grid>
</WindowEXT>
