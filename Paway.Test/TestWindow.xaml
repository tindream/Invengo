<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid FocusManager.FocusedElement="{Binding ElementName=t1}" HorizontalAlignment="Center" Width="250" VerticalAlignment="Center">
        <TabControlEXT TabStripPlacement="Top" MaxHeight="300" ItemContainerStyle="{StaticResource TabMenuItem}">
            <TabItem Cursor="Hand" Header="音乐电台">
                <WrapPanel Margin="5,5,0,0" Height="61">
                    <CheckButton Content="A" Margin="0" Radius="3,0,0,3"/>
                    <CheckButton Content="B" Margin="-1,0,0,0" Radius="0"/>
                    <CheckButton Content="C" Margin="-1,0,0,0" Radius="0,3,3,0"/>
                </WrapPanel>
            </TabItem>
            <TabItem Cursor="Hand" Header="Mv电台">
                <WrapPanel Margin="5,5,0,0" Height="61">
                    <RadioBox Content="A" Margin="0,0,0,0" Radius="3,0,0,3"/>
                    <RadioBox Content="B" Margin="-1,0,0,0" Radius="0"/>
                    <RadioBox Content="C" Margin="-1,0,0,0" Radius="0,3,3,0"/>
                </WrapPanel>
            </TabItem>
        </TabControlEXT>
    </Grid>
</WindowEXT>
