<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid FocusManager.FocusedElement="{Binding ElementName=t1}">
        <DockPanel HorizontalAlignment="Center" Width="200" VerticalAlignment="Center">
            <ButtonEXT Name="btnCancel" Content="取消"  AnimationHelper.Value="Bottom"
                       Type="Warn" IsLight="True"
                       Click="BtnCancel_Click"
                       ImageStretch="None" ImageMargin="-24,0,0,0" ImageDock="Right"
                       Image="Images/close.png|/Images/close_while.png"
                       DockPanel.Dock="Top"/>
            <TextBoxEXT Name="t1" DockPanel.Dock="Top"/>
            <CheckButton Content="A" DockPanel.Dock="Top"/>
            <ListViewCustom x:Name="listView3" Margin="5,5,0,0" IsLight="True" ItemWidthType="ThreeRow" SelectionMode="Extended"
                         ItemHeight="60" ItemWidth="100" DockPanel.Dock="Top">
                <ListBoxItemEXT Text="A"/>
                <ListBoxItemEXT Text="B"/>
                <ListBoxItemEXT Text="C"/>
                <ListBoxItemEXT Text="D"/>
                <ListBoxItemEXT Text="E" IsEnabled="False"/>
                <ListBoxItemEXT Text="F"/>
                <ListBoxItemEXT Text="G"/>
                <ListBoxItemEXT Text="H"/>
                <ListBoxItemEXT Text="I"/>
            </ListViewCustom>
        </DockPanel>
    </Grid>
</WindowEXT>
