<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <ButtonEXT VerticalAlignment="Center" Content="随机" Click="ButtonEXT_Click" Visibility="{Binding UserType, Converter={StaticResource valueToCollapsed}, ConverterParameter=2}"/>

            <TextBoxEXT Title="你好"/>
            <WrapPanel>
                <ComboBoxEXT Title="你好" ItemsSource="{IntList Count=23}" Water="{x:Null}" Margin="2,2,0,2" Radius="3,0,0,3" Width="66"/>
                <ComboBoxEXT ItemsSource="{IntList Count=12, Start=0, Interval=5}" Water="{x:Null}" Margin="-1,2,2,2" Radius="0,3,3,0" Width="30"/>
            </WrapPanel>
            <Border BorderBrush="Red" BorderThickness="1" Margin="5" >
                <ListViewCustom Name="listView1" 
                           ItemHeight="67" ItemWidth="51" ItemWidthType="TwoRow"
                           IsLight="True">
                    <ListBoxItemEXT Text="1"/>
                    <ListBoxItemEXT Text="A"/>
                    <ListBoxItemEXT Text="B"/>
                    <ListBoxItemEXT Text="C"/>
                    <ListBoxItemEXT Text="D"/>
                    <ListBoxItemEXT Text="E"/>
                </ListViewCustom>
            </Border>
        </StackPanel>
        <ScrollViewerEXT Grid.Column="1" Background="{StaticResource MosaicBrush}" ScrollInterval="50">
            <Canvas Name="canvas" Background="White" Width="200" Height="200">
                <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  Y1="50" Y2="50"/>
                <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  Y1="100" Y2="100"/>
                <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  Y1="150" Y2="150"/>

                <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  X1="50" X2="50"/>
                <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  X1="100" X2="100"/>
                <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  X1="150" X2="150"/>
            </Canvas>
        </ScrollViewerEXT>
    </Grid>
</WindowEXT>
