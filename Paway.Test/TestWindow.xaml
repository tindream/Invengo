<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <ButtonEXT VerticalAlignment="Center" Content="随机" Click="ButtonEXT_Click" Visibility="{Binding UserType, Converter={StaticResource valueToCollapsed}, ConverterParameter=2}"
                       Command="{Binding ButtonCommand}"/>
            <TextBoxNumeric Interval="1.06" Decimal="2" MaxValue="100" MinValue="0" Text="4"/>

            <CheckButton Content="A" Margin="-3,2,2,0" Radius="0,3,0,0" HorizontalContentAlignment="Center" Padding="4,0" Height="32"
                                     IsChecked="{Binding UserType, Converter={StaticResource valueToTrue}, ConverterParameter=1}"/>
        </StackPanel>
        <ScrollViewerEXT Grid.Column="1" ScrollInterval="50">
            <Canvas Name="canvas" Background="White" Width="200" Height="200"/>
        </ScrollViewerEXT>
    </Grid>
</WindowEXT>
