<WindowEXT x:Class="Paway.Test.TestWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:local="clr-namespace:Paway.Test"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
           xmlns:ip="http://www.galasoft.ch/mvvmlight"
           mc:Ignorable="d"
           DataContext="{Binding Test, Source={StaticResource Locator}}"
           Title="{Binding Text}" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" >
            <Label Content="{Binding Language.Test, Source={StaticResource L}}"/>
            <ListViewEXT x:Name="listView3" Margin="5,5,0,0" IsLight="True" ItemWidthType="CustomRow" Row="3"
                         ItemHeight="60" ItemWidth="100" ItemsSource="{Binding GridList}">
            </ListViewEXT>
            <DataGridEXT ItemsSource="{Binding GridList}" Height="150"/>
            <ButtonEXT IsLight="True" Click="ButtonEXT_Click" Command="{Binding ButtonCommand}" 
                       ItemBackground="#409EFF;0"/>
        </StackPanel>
    </Grid>
</WindowEXT>
