<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <ButtonEXT VerticalAlignment="Center" Content="随机" Click="ButtonEXT_Click"/>
        <Border BorderThickness="0,0,1,0" BorderBrush="LightGray"/>
        <Canvas Grid.Column="1" Name="canvas">
            <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="DarkGray" StrokeThickness="1" 
                              VerticalAlignment="Bottom" Margin="0 0 0 0"/>
            <Thumb Name="thumb1" Background="Red" Height="50" Width="50" Canvas.Left="50" Canvas.Top="50" Template="{StaticResource ThumbButton}"
                   DragDelta="DragDelta" DragStarted="DragStarted" DragCompleted="DragCompleted" />
            <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  Y1="50" Y2="50"/>
            <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  Y1="100" Y2="100"/>

            <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  X1="50" X2="50"/>
            <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2 2" 
                  X1="100" X2="100"/>
        </Canvas>
    </Grid>
</WindowEXT>
