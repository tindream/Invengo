<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TreeViewEXT x:Name="TreeViewOrg" AllowDrop="True" Height="250" ItemTemplate="{StaticResource TreeNode}" ItemsSource="{Binding TreeList}"/>
        <DataGridEXT Name="datagrid1" Grid.Column="1" AllowDrop="True"
                               ItemsSource="{Binding GridList}"
                               Height="250" VerticalAlignment="Top">
            <DataGrid.Columns>
                <DataGridTextColumn MinWidth="130" Binding="{Binding Money}" ElementStyle="{StaticResource TextRight}"/>
            </DataGrid.Columns>
        </DataGridEXT>
    </Grid>
</WindowEXT>
