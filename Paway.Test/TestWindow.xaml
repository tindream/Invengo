<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:ip="http://www.galasoft.ch/mvvmlight"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <WindowEXT.FunctionBar>
        <local:TitleContent/>
    </WindowEXT.FunctionBar>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <CheckButton Title="你好Hello"/>
            <ComboBoxEXT Title="你好Hello" ItemsSource="{Binding ViewList}"/>
            <PasswordBox PasswordBoxEXT.Title="你好Hello"/>
            <RadioBox Title="你好Hello"/>
            <SliderEXT Title="你好Hello" Minimum="-40" Maximum="20" Value="{Binding Value2}"/>
            <TextBoxEXT Title="你好Hello"/>
            <TextBoxNumeric Title="你好Hello"/>
            <ButtonEXT Click="ButtonEXT_Click"/>
        </StackPanel>
        <Border Grid.Column="1" Background="Transparent">
        </Border>
    </Grid>
</WindowEXT>
