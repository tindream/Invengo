<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel>
            <ButtonEXT VerticalAlignment="Center" Content="随机" Click="ButtonEXT_Click" Visibility="{Binding UserType, Converter={StaticResource valueToCollapsed}, ConverterParameter=2}"
                       Command="{Binding ButtonCommand}"/>

            <ComboMulti ItemsSource="{Binding MultiList}" HorizontalContentAlignment="Center"/>
            <ComboTime />
            <WrapPanel>
                <ButtonEXT Width="80" Content="取消" Type="Warn" IsLight="True"/>
                <ButtonEXT Width="80" Content="确认" IsEnabled="{Binding IPad}"/>
            </WrapPanel>
        </StackPanel>
        <ScrollViewerEXT Grid.Column="1" Background="{StaticResource MosaicBrush}" ScrollInterval="50">
            <Canvas Name="canvas" Background="White" Width="200" Height="200">
                <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2" 
                  Y1="50" Y2="50"/>
                <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2" 
                  Y1="100" Y2="100"/>
                <Line X1="0" X2="{Binding ActualWidth, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2" 
                  Y1="150" Y2="150"/>

                <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2" 
                  X1="50" X2="50"/>
                <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2" 
                  X1="100" X2="100"/>
                <Line Y1="0" Y2="{Binding ActualHeight, ElementName=canvas}" Stroke="LightGray" RenderOptions.EdgeMode="Aliased" StrokeDashArray="2" 
                  X1="150" X2="150"/>
            </Canvas>
        </ScrollViewerEXT>
    </Grid>
</WindowEXT>
