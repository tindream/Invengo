<WindowEXT x:Class="Paway.Test.TestWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:local="clr-namespace:Paway.Test"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
           xmlns:ip="http://www.galasoft.ch/mvvmlight"
           mc:Ignorable="d"
           DataContext="{Binding Test, Source={StaticResource Locator}}"
           Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <!--<WindowEXT.FunctionBar>
        <local:TitleContent/>
    </WindowEXT.FunctionBar>-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center" >
            <TextBoxEXT IAnimation="2"/>
            <ComboBoxEXT Name="cbxUserName" Water="请输入" 
                     IAnimation="3"
                     IsEditable="True" IconWidth="36" IconStretch="Uniform"/>
            <TextBoxEXT IAnimation="3"/>
            <WrapPanel>
                <RadioBox Title="状态:" TitleMinWidth="60" Content="启用" Radius="3,0,0,3" Margin="2,2,0,2" Padding="11,5"
                          GroupName="Statu" IsChecked="{Binding Statu, Converter={StaticResource valueToTrue}, ConverterParameter=True}"/>
                <RadioBox Content="停用" Radius="0,3,3,0" Margin="-1,2,2,2" Padding="11,5"
                          GroupName="Statu" IsChecked="{Binding Statu, Converter={StaticResource valueToTrue}, ConverterParameter=False}"/>
            </WrapPanel>
            <ButtonEXT IsLight="True" Click="ButtonEXT_Click" Command="{Binding ButtonCommand}"/>
        </StackPanel>
        <Border Grid.Column="1" Background="Transparent">
            <!--<DataGridEXT ItemsSource="{Binding GridList}">
                <DataGrid.Columns>
                </DataGrid.Columns>
            </DataGridEXT>-->
        </Border>
    </Grid>
</WindowEXT>
