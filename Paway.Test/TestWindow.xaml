<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Border x:Name="b1" Margin="3,2" Height="100" Width="21" Background="#333" Padding="1">
                <ProgressBar Name="p1" Orientation="Vertical" Foreground="#C8D4D4D4" BorderThickness="0"
                         Value="{Binding Value2}" Minimum="-40" Maximum="20"
                         RenderTransformOrigin="0.5,0.5">
                    <ProgressBar.Background>
                        <LinearGradientBrush EndPoint="1,0" StartPoint="0,0">
                            <GradientStop Offset="0" Color="#FFFF00" />
                            <GradientStop Offset="0.33" Color="#FFFF00" />
                            <GradientStop Offset="0.33" Color="#00FF00" />
                            <GradientStop Offset="1" Color="#00FF00" />
                        </LinearGradientBrush>
                    </ProgressBar.Background>
                    <ProgressBar.RenderTransform>
                        <RotateTransform Angle="180"/>
                    </ProgressBar.RenderTransform>
                </ProgressBar>
            </Border>
            <Line X1="0" X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" Stroke="Red" StrokeThickness="0.1" Margin="2"/>
            <Line X1="0" X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" Stroke="Red" StrokeThickness="0.1" Margin="2" RenderOptions.EdgeMode="Aliased"/>
            <Line X1="0" X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" Stroke="Red" StrokeThickness="0.1" Margin="2" RenderOptions.CachingHint="Cache"/>
            <Line X1="0" X2="{Binding ActualWidth, RelativeSource={RelativeSource Self}}" Stroke="Red" StrokeThickness="0.1" Margin="2" RenderOptions.ClearTypeHint="Enabled"/>
            <Border BorderBrush="Red" BorderThickness="1" Height="1" Margin="2"/>
            <SliderEXT Minimum="-40" Maximum="20" Value="{Binding Value2}"/>
            <ButtonEXT Click="ButtonEXT_Click"/>
        </StackPanel>
    </Grid>
</WindowEXT>
