<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:ip="http://www.galasoft.ch/mvvmlight"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <WindowEXT.FunctionBar>
        <local:TitleContent/>
    </WindowEXT.FunctionBar>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <TextBoxEXT/>
            <TextBoxEXT/>
            <TextBoxEXT/>
            <WrapPanel>
                <ComboBoxEXT ItemsSource="{Binding ViewList}" Background="Transparent" BorderThickness="0,0,0,1" Radius="3,3,0,0" Width="90"/>
                <ComboView ItemsSource="{Binding ViewList}" SelectedValuePath="Text"/>
            </WrapPanel>
            <SliderEXT Value="85" RenderEXT.ColorLinear="Red" TrackColorLinear="Red"/>
            <ButtonEXT Click="ButtonEXT_Click"/>
        </StackPanel>
        <Border Grid.Column="1" Background="Transparent">
            <DataGridEXT ItemsSource="{Binding GridList}" HorizontalContentAlignment="Center"/>
        </Border>
    </Grid>
</WindowEXT>
