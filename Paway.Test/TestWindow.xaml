<WindowEXT x:Class="Paway.Test.TestWindow"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:local="clr-namespace:Paway.Test"
           xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
           xmlns:ip="http://www.galasoft.ch/mvvmlight"
           mc:Ignorable="d"
           DataContext="{Binding Test, Source={StaticResource Locator}}"
           Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="200" >
            <TextBoxEXT >
                <Binding Path="Text">
                    <Binding.ValidationRules>
                        <RegexValidationRule RegexType="Word"/>
                    </Binding.ValidationRules>
                </Binding>
            </TextBoxEXT>
            <ProgressBarEXT Value="20.4" Minimum="-20" Maximum="50" Name="progress" SmallChange="10" IText="False"/>
            <ButtonEXT IsLight="True" Click="ButtonEXT_Click" Command="{Binding ButtonCommand}"/>
        </StackPanel>
    </Grid>
</WindowEXT>
