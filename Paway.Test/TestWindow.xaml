<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <WindowEXT.FunctionBar>
        <local:TitleContent/>
    </WindowEXT.FunctionBar>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Border BorderBrush="Blue" BorderThickness="1">
                <ListViewCustom ItemsSource="{Binding ViewList}" ItemWidth="49" IsLight="True" ItemHeight="32"/>
            </Border>
            <SliderEXT Minimum="-40" Maximum="20" Value="{Binding Value2}"/>
            <ButtonEXT Click="ButtonEXT_Click"/>
        </StackPanel>
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1" Width="200" Height="200" Background="Transparent">
            <Border.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="A">
                        <MenuItem Header="1"></MenuItem>
                        <MenuItem Header="2"></MenuItem>
                    </MenuItem>
                    <MenuItem Header="B"></MenuItem>
                </ContextMenu>
            </Border.ContextMenu>
        </Border>
    </Grid>
</WindowEXT>
