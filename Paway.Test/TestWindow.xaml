<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity" 
        xmlns:ip="http://www.galasoft.ch/mvvmlight"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <WindowEXT.FunctionBar>
        <local:TitleContent/>
    </WindowEXT.FunctionBar>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="3*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <ComboView ItemsSource="{Binding ViewList}" SelectedValuePath="Text"/>
            <ButtonEXT Click="ButtonEXT_Click"/>
            <WrapPanel Orientation="Vertical" Height="66">
                <ButtonEXT IsLight="True"
                   Image="pack://application:,,,/Paway.Test;component/Images/left.png|pack://application:,,,/Paway.Test;component/Images/left_white.png" 
                    ImageStretch="Uniform" Radius="4,0,0,4" Margin="2,22,0,18" ImageWidth="18"  Padding="3,1"/>
                <ButtonEXT IsLight="True" Margin="-1,2,0,0" Radius="4,4,0,0" 
                   Image="pack://application:,,,/Paway.Test;component/Images/up.png|pack://application:,,,/Paway.Test;component/Images/up_white.png"  ImageStretch="Uniform"
                   Padding="4,1,2,0" ImageWidth="18"/>
                <ButtonEXT IsLight="True" Margin="-1,-1,0,0" Radius="0" 
                   Image="pack://application:,,,/Paway.Test;component/Images/refresh.png|pack://application:,,,/Paway.Test;component/Images/refresh_white.png"  ImageStretch="Uniform"
                   Padding="4,1,2,1" ImageWidth="18"/>
                <ButtonEXT IsLight="True" Margin="-1,-1,0,2" Radius="0,0,4,4" 
                   Image="pack://application:,,,/Paway.Test;component/Images/right.png|pack://application:,,,/Paway.Test;component/Images/right_white.png"  ImageStretch="Uniform"
                   Padding="4,0,2,1" ImageWidth="18"/>
                <ButtonEXT IsLight="True" Margin="-1,22,2,0" Radius="0,4,4,0"  
                   Image="pack://application:,,,/Paway.Test;component/Images/down.png|pack://application:,,,/Paway.Test;component/Images/down_white.png"  ImageStretch="Uniform"
                   ImageWidth="18" Padding="3,1"/>
            </WrapPanel>
        </StackPanel>
        <Border Grid.Column="1" Background="Transparent">
            <WrapPanel>
                <ComboBoxEXT ItemsSource="{Binding ViewList}" Background="Transparent" BorderThickness="0,0,0,1" Radius="3,3,0,0"/>
            </WrapPanel>
        </Border>
    </Grid>
</WindowEXT>
