<WindowEXT x:Class="Paway.Test.TestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Paway.Test"
        mc:Ignorable="d"
        UseLayoutRounding="True"
        DataContext="{Binding Test, Source={StaticResource Locator}}"
        Title="TestWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="211"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <StackPanel VerticalAlignment="Center">
            <Border Name="borderClip" BorderBrush="Gray" BorderThickness="1" Background="Green" Width="100" Height="100">
                <Border.Clip>
                    <RectangleGeometry  Rect="0,10,100,2"/>
                </Border.Clip>
            </Border>
            <TextBoxEXT Height="69" AcceptsReturn="True" TextWrapping="Wrap"/>
            <ButtonEXT Command="{Binding ButtonCommand}" CommandParameter="{Binding ElementName=listView}" Click="ButtonEXT_Click"/>
        </StackPanel>

        <Border Name="borderLine" Grid.Column="1" BorderBrush="LightGray" BorderThickness="1"  Margin="20">
            <Canvas Name="canvas" Grid.Column="1" Background="White">
                <Border Canvas.Left="124" Canvas.Top="82" Background="Transparent"
                        BorderBrush="LightGray" BorderThickness="1"
                        Height="112" Width="216" MinHeight="20" MinWidth="20">
                    <!--<Viewbox>-->
                    <!--<RichTextBoxEXT Name="rct"/>-->
                    <ListViewCustom Name="listView" ItemsSource="{Binding ViewList}" ItemTextForeground="Gray"
                                    ItemTextFontSize="20" ItemBackground="Transparent" HorizontalContentAlignment="Left"/>

                    <!--</Viewbox>-->
                </Border>
            </Canvas>
        </Border>
    </Grid>
</WindowEXT>
