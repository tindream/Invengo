    <utils:WindowEXT.FunctionBar>
        <utils:WindowFunctionBar>
            <Menu>
                <MenuItem Header="发送反馈2" Icon="Q2" IsCheckable="True"/>
                <MenuItem Header="发送反馈3" >
                    <MenuItem Header="报告问题"
                              IsCheckable="True"  Icon="Q3"/>
                    <MenuItem Header="提供反馈"
                              IsCheckable="True" />
                    <Separator />
                    <MenuItem Header="设置..." />
                </MenuItem>
                <MenuItem Header="发送反馈" Icon="Q1">
                    <MenuItem Header="报告问题"
                              IsCheckable="True"  Icon="A1"/>
                    <MenuItem Header="提供反馈"
                              IsCheckable="True" />
                    <Separator />
                    <MenuItem Header="设置..." />
                    <MenuItem Header="发送反馈C" Icon="A2">
                        <MenuItem Header="报告问题"
                              IsCheckable="True"  Icon="B1"/>
                        <MenuItem Header="提供反馈"
                              IsCheckable="True" />
                        <Separator />
                        <MenuItem Header="设置..." />
                    </MenuItem>
                </MenuItem>
            </Menu>
            <Separator />
            <Button Content="Dino.C" ToolTip="当前档案"/>
        </utils:WindowFunctionBar>
    </utils:WindowEXT.FunctionBar>
    <utils:WindowEXT.FunctionBarRight>
        <utils:WindowFunctionBar>
            <Button Content="Sign in" />
        </utils:WindowFunctionBar>
    </utils:WindowEXT.FunctionBarRight>

    <Grid>
