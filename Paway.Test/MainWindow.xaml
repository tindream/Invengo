            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"></ColumnDefinition>
            <ColumnDefinition Width="350"></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <utils:ProgressBarEXT Grid.Row="1" Margin="5" Value="95" />

        <utils:ComboBoxEXT Grid.Row="2" Margin="5" Name="cbx">
            <ComboBoxItem Content="A" IsSelected="True"/>
            <ComboBoxItem Content="B"/>
            <ComboBoxItem Content="C"/>
        </utils:ComboBoxEXT>

        <utils:TextBoxEXT Grid.Row="3" Margin="5" Name="tb" ></utils:TextBoxEXT>
        <PasswordBox Grid.Row="4" Margin="5" ></PasswordBox>
        <utils:ButtonEXT Grid.Row="5" Margin="5"  Content="确认" Click="ButtonEXT_Click" 
                           BackgroundStart=";#770C7900" BackgroundEnd=";#77FF0000"
                           BackgroundImage="pack://application:,,,/Paway.Test;component/Images/close.png|pack://application:,,,/Paway.Test;component/Images/close_while.png"
                           Stretch="None" Viewport="0,0,0.5,1">

        </utils:ButtonEXT>

        <utils:ToggleEXT Content="BBB" Grid.Row="6" Margin="5"></utils:ToggleEXT>
        <utils:CheckBoxEXT Content="AAA" Grid.Row="7" Margin="5"></utils:CheckBoxEXT>

        <utils:ListViewEXT Name="listView1" Grid.Row="9" Grid.Column="1" Height="250" Margin="5,6,5,5" 
                           ItemWidth="100" ItemHeight="100" ItemRadius="0" ItemMargin="1" ItemPadding="0;0,4,0,0"
                           ItemBorder=";1,1,1,5" ItemBackground=";#7723AFFF"
                           ItemImageMargin="5,5,0,0;5,1,0,4"  
                           HorizontalContentAlignment="Left" VerticalContentAlignment="Center" ItemTextForeground="#222"
                           ItemTextPadding="5" 
                           ItemImageHeight="24" ItemImageWidth="24" ItemImageDock="Top" 
                           ItemDescDock="Right" ItemDescPadding="5" >
            <utils:ListBoxItemEXT Content="C1" Desc="11" IsSelected="True" 
                                  Image="pack://application:,,,/Paway.Test;component/Images/close.png|pack://application:,,,/Paway.Test;component/Images/close_while.png"/>
            <ListBoxItem Content="C2"/>
            <ComboBoxItem Content="A"/>
            <ComboBoxItem Content="B"/>
        </utils:ListViewEXT>


        <utils:DataGridEXT Name="datagrid1" Grid.Column="1" Grid.RowSpan="7" Margin="5,7,5,8" Height="285" Grid.Row="1">
            <DataGrid.Columns>
                <DataGridTextColumn  MinWidth="130" Binding="{Binding Money}" ElementStyle="{StaticResource TextRightSytle}"/>
                <DataGridTemplateColumn Header="进度" x:Name="Value">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <utils:ProgressBarEXT Value="{Binding Value}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </utils:DataGridEXT>

