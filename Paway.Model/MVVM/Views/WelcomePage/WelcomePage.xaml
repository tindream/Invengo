<Page x:Class="Paway.Model.WelcomePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      FontSize="20"
      DataContext="{Binding Welcome, Source={StaticResource Locator}}"
      d:DesignHeight="160" d:DesignWidth="455" >
    <StackPanel Name="root" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0">
        <TextBlock Text="{Binding Title, FallbackValue=欢迎使用}" TextAlignment="Center"/>
        <TextBlock Text="{Binding Subject}" TextAlignment="Center"/>
    </StackPanel>
</Page>
