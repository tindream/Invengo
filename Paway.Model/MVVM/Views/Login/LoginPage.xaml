<Page x:Class="Paway.Model.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      DataContext="{Binding Login, Source={StaticResource Locator}}"
      d:DesignHeight="1080" d:DesignWidth="1920">
    <Page.Background>
        <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
            <GradientStop Color="#61c3d6" Offset="0"/>
            <GradientStop Color="#5ab7dc" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>
    <DockPanel>
        <WrapPanel DockPanel.Dock="Top" HorizontalAlignment="Right">
            <ButtonEXT Radius="0" IsLight="True" ItemBorder="0" Margin="0" ToolTip="设置"
                       Image="pack://application:,,,/Paway.Model;component/Images/login/setting.png|pack://application:,,,/Paway.Model;component/Images/login/setting.png"
                       Visibility="{Binding ISetting, Converter={StaticResource boolToVisible}}"
                       Command="{Binding MenuCommand}" CommandParameter="设置" ImageWidth="48" ImageStretch="Uniform" Padding="7" />
            <ButtonEXT Radius="0" Type="Error" IsLight="True" ItemBorder="0" Margin="0" ToolTip="关闭"
                       Image="pack://application:,,,/Paway.Model;component/Images/operate/close_white.png|pack://application:,,,/Paway.Model;component/Images/operate/close_white.png"
                       Visibility="{Binding IClose, Converter={StaticResource boolToVisible}}"
                       Command="{Binding MenuCommand}" CommandParameter="关闭" ImageWidth="48" ImageStretch="Uniform" Padding="7" />
        </WrapPanel>
        <StackPanel x:Name="Root" Margin="0,-32,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Width="450">
            <Image Source="{Binding LogoImage}" Stretch="Uniform" Height="64"/>
            <TextBlock Text="{Binding Welcome}" Foreground="White" Margin="-150,40" FontSize="36" TextTrimming="WordEllipsis" HorizontalAlignment="Center"  />
            <TextBoxEXT  Name="tbUserName" Text="{Binding UserName}" Water="请输入用户名" 
                     IAnimation="2" BorderThickness="0,0,0,1" FontSize="30" WaterSize="0.7"
                     Icon="/Paway.Model;component/Images/login/user.png" IconWidth="36" IconStretch="Uniform"
                     Visibility="{Binding IUserList, Converter={StaticResource boolToCollapsed}, FallbackValue=Visible}"/>
            <ComboBoxEXT Name="cbxUserName" Text="{Binding UserName}" Water="请输入用户名" ItemsSource="{Binding ObList}" SelectedValuePath="Id" DisplayMemberPath="CustomName"
                     IAnimation="2" BorderThickness="0,0,0,1" FontSize="30" WaterSize="0.7"
                     IsEditable="True" Icon="/Paway.Model;component/Images/login/user.png" IconWidth="36" IconStretch="Uniform"
                     Visibility="{Binding IUserList, Converter={StaticResource boolToVisible}}"/>
            <PasswordBox Name="tbPassword" MaxLength="16" 
                     BorderThickness="0,1" FontSize="30" PasswordBoxEXT.WaterSize="0.7" Margin="2,35,2,2"
                     PasswordBoxEXT.Password="{Binding Password}"
                     PasswordBoxEXT.IAnimation="2" 
                     PasswordBoxEXT.Icon="/Paway.Model;component/Images/login/password.png" PasswordBoxEXT.IconWidth="36" PasswordBoxEXT.IconStretch="Uniform"/>
            <ButtonEXT Content="登陆" Command="{Binding MenuCommand}" CommandParameter="登陆" FontSize="30" IsLight="True" Margin="2,40,2,2" BorderBrush="White" ItemForeground="White;;" Padding="12,9"/>
        </StackPanel>
    </DockPanel>
</Page>
