<DockPanel x:Class="Paway.Model.StatuItem"
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
           mc:Ignorable="d" 
           Name="Root"
           Background="{Binding DescBrush, FallbackValue=Black}"
           DataContext="{Binding StatuItem, Source={StaticResource Locator}}"
           Height="35" d:DesignWidth="800">
    <TextBlock Text="{Binding TimeNow}" FontSize="14" Foreground="White" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="10,0" />
    <TextBlock Text="{Binding UserName}" FontSize="14" Foreground="White" HorizontalAlignment="Right" DockPanel.Dock="Right" Margin="10,0" />
    <Path Style="{StaticResource PathRound}" Fill="{Binding ConnectBrush}" Stroke="Transparent" Width="15" Height="15" Margin="5,1,1,1" 
          Visibility="{Binding IConnect, Converter={StaticResource boolToVisible}}"/>
    <TextBlock Text="{Binding Desc}" FontSize="14" Foreground="White" Margin="5,0,0,0" TextTrimming="WordEllipsis" ToolTip="{Binding Desc}"/>
</DockPanel>
