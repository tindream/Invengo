<local:BorderControlBase x:Class="Invengo.Utils.CheckBoxRound"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Invengo.Utils"
             mc:Ignorable="d" Height="Auto" Width="Auto">
    <Grid>
        <Border Name="cbxBorder"
                VerticalAlignment="Center"
                CornerRadius="7" BorderThickness="1" 
                Padding="5"
                MouseDown="Border_MouseDown" MouseUp="Border_MouseUp"
                TouchDown="BlueBorder_MouseMove" TouchUp="TransBorder_MouseLeave"
                MouseMove="BlueBorder_MouseMove" MouseLeave="TransBorder_MouseLeave">
            <DockPanel>
                <Image Name="cbxImage" Source="../Images/checkBox.png" Width="50" DockPanel.Dock="Right"/>
                <TextBlock Name="cbxTitle" Margin="0,0,5,0" Opacity="0.8" Text="标题" 
                   FontFamily="Microsoft YaHei" FontSize="18" 
                   TextTrimming="WordEllipsis" />
            </DockPanel>
        </Border>
    </Grid>
</local:BorderControlBase>
